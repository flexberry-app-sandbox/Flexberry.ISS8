<h3 class="ui header">{{t "forms.i-i-s-i-s-s8-форма-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерФормы
      class=(if (v-get validationModel "номерФормы" "isInvalid") "error")
      label=(t "forms.i-i-s-i-s-s8-форма-e.номерФормы-caption")
      data-test-i-i-s-i-s-s8-форма-e-номерФормы=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерФормы" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-i-s-s8-форма-e.наименование-caption")
      data-test-i-i-s-i-s-s8-форма-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-s-s8-форма-e.условие-caption"}}</label>
    {{flexberry-groupedit
      componentName="условиеGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.условие
      content=model.условие
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "условие" "isInvalid") "error")
      data-test-i-i-s-i-s-s8-форма-e-условие=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "условие" "message")}}
  </div>
</form>
